doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title Dashboard
		link(rel='stylesheet', href='/public/css/font-awesome.min.css')
		link(rel='stylesheet', href='/public/css/bootstrap.min.css')
		link(rel='stylesheet', href='/public/css/all.css')
		script(src='/public/js/jquery-3.1.1.min .js')
		script(src='/public/js/all.js')
		script(src='/public/js/bootstrap.min.js')
	body
		#loader
		.fill-screen.content
			nav.navbar.navbar-inverse
				.container-fluid
					.navbar-header
						a.navbar-brand(href='#')
							| ICU
							h1 ICU
					.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
									i.fa.fa-user
									|  #{email}
								ul.dropdown-menu
									li
										a(href='/logout')
											i.fa.fa-sign-out
											|  Logout
									li
										a(href='#')
											i.fa.fa-user
											|  User Information
			.fill-screen.ICU-body
				.ICU-side-nav.container-relative.pull-left
					ul.nav.nav-pills.nav-stacked
						li.nav-link.overview
							a(href='/') Main View
						li
							a(href='/') My Machines
						li
							a(href='/Alarms') Event/Alarms
				.ICU-content.container-relative.container-fluid
					.ICU-widget.col-sm-12.ICU-widget-full-page
						.ICU-widget-header
							.row
								.col-sm-4
									h4
										i.fa.fa-server.fa-fw
										|  Add Machines
								.col-sm-8
									h4.align-right
										a(href='')
											i.fa.fa-info-circle
						.ICU-widget-container.add-machine-form-container.col-md-6.col-md-offset-3
							.ICU-widget-wrapper
								form.align-right
									form-group
										input(type='text', name='machine-ip', placeholder='IP', required='required').form-control
									button(type='button', id='openAddMachineButton').btn.btn-success.btn-lg.btn-block.
										Add Machine

.modal.fade(tabindex='-1', role='dialog')
	.modal-dialog(role='document')
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-label='Close')
					span(aria-hidden='true') ×
				h4.modal-title 
			.modal-body
				p 
			.modal-footer
				button.btn.btn-default(type='button', data-dismiss='modal') Close
.modal.fade#addMachineForm(tabindex='-1', role='dialog')
	.modal-dialog(role='document')
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-label='Close')
					span(aria-hidden='true') ×
				h4.modal-title Add Machine
			.modal-body
				form
					.form-group
						input(name='machine-ip', placeholder='Machine IP').form-control
					button.btn.btn-success(type='button', id='addMachineButton')
			.modal-footer
				button.btn.btn-default(type='button', data-dismiss='modal') Close
